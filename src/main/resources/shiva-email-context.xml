<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="

       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd

       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd

       ">

    <context:annotation-config/>

    <bean id="mailMessages" abstract="true" class="org.springframework.context.MessageSource"/>
    <bean id="mailSender" abstract="true" class="org.springframework.mail.MailSender"/>

    <bean id="shivaMail" abstract="true" class="nz.co.aetheric.shiva.email.ShivaMail"/>

    <bean class="nz.co.aetheric.shiva.email.ShivaMailConfig"/>
    <bean parent="shivaMail" class="nz.co.aetheric.shiva.email.ShivaMailService"/>

</beans>